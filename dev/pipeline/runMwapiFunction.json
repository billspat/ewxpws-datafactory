{
	"name": "runMwapiFunction",
	"properties": {
		"activities": [
			{
				"name": "get_station_list",
				"type": "Lookup",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "AzurePostgreSqlSource",
						"partitionOption": "None"
					},
					"dataset": {
						"referenceName": "stations",
						"type": "DatasetReference"
					},
					"firstRowOnly": false
				}
			},
			{
				"name": "mwapi_each_station",
				"type": "ForEach",
				"dependsOn": [
					{
						"activity": "get_station_list",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@activity('get_station_list').output.value",
						"type": "Expression"
					},
					"activities": [
						{
							"name": "set_json_body",
							"type": "SetVariable",
							"dependsOn": [],
							"userProperties": [],
							"typeProperties": {
								"variableName": "mwapi_rest_body",
								"value": {
									"value": "@concat('{\"station_type\":\"',\n  item().station_type, \n  '\",\"station_config\":',\n  item().station_config,\n  '}'\n)",
									"type": "Expression"
								}
							}
						},
						{
							"name": "mwapi_function",
							"type": "AzureFunctionActivity",
							"dependsOn": [
								{
									"activity": "set_json_body",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"functionName": "mwapi",
								"method": "GET"
							},
							"linkedServiceName": {
								"referenceName": "AzureFunctionEwxDataCollect",
								"type": "LinkedServiceReference",
								"parameters": {
									"station_type": {
										"value": "@item().station_type",
										"type": "Expression"
									},
									"station_config": {
										"value": "@item().station_config",
										"type": "Expression"
									}
								}
							}
						},
						{
							"name": "fnoutput",
							"type": "SetVariable",
							"dependsOn": [
								{
									"activity": "mwapi_function",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"userProperties": [],
							"typeProperties": {
								"variableName": "readings",
								"value": {
									"value": "@activity('mwapi_function').output",
									"type": "Expression"
								}
							}
						}
					]
				}
			}
		],
		"concurrency": 5,
		"variables": {
			"mwapioutput": {
				"type": "String"
			},
			"stations_station_type": {
				"type": "String"
			},
			"stations_station_config": {
				"type": "String"
			},
			"mwapi_rest_body": {
				"type": "String"
			},
			"readings": {
				"type": "String"
			}
		},
		"annotations": []
	}
}